<h2>Review for <%= link_to @review.film.title, film_path(@review.film) %></h2>
<h3><%= @review.headline %></h3>

<p><%= @review.stars_pretty %></p>
<p><%= @review.content %><strong> </p>
<p>-- by <%= @review.reviewer.username_fancy %></strong></p>
 <br>

<% if @errors %>
 <p>You can't vote until you sign in.</p>
<% end %>

<% if current_user && @author.id == current_user.id  %>
  <div></div>
<% elsif current_user && !current_user.voted?(@review.id) %>
  <%= form_for :vote, url: create_vote_path do |f| %>
  <%= f.submit "This review was helpful!" %>
  <% end %>
<% elsif current_user %>
  <div>You found this review helpful. <%= " #{Emoji.find_by_alias("thumbsup").raw}" %></div>
<% end %>



<p> <%= link_to "Comment on #{@review.headline}", comments_new_path(commentable_type: "Review", commentable_id: @review.id) %> </p>

<% @review.comments.each do |comment| %>
  <%= render '/comments/show', comment: comment %>
<%end%>

